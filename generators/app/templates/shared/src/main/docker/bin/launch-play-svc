#!/bin/bash

set -e
set -u

exec gosu atm /var/<%= props.appName %>/bin/<%= props.appName %> -Dconfig.file=/var/<%= props.appName %>/conf/server.conf -Dlogger.file=/var/<%= props.appName %>/conf/logback.xml -Dcom.sun.management.jmxremote.port=$JMX_PORT  -Dcom.sun.management.jmxremote.rmi.port=$JMX_PORT -Djava.rmi.server.hostname=$RMI_HOSTNAME -Dcom.sun.management.jmxremote.ssl=false -Dcom.sun.management.jmxremote.authenticate=false -J-Xms0m -J-Xmx${SVC_MAX_MEMORY}
